<?xml version="1.0" encoding="UTF-8"?>
<Context>
 <Resource name="jdbc/mysql"
         auth="Container"
         driverClassName="com.mysql.jdbc.Driver"
         type="javax.sql.DataSource"
         url="jdbc:mysql://localhost:3306/celloud"
         username="root"
         password="celloud"
         maxActive="100" 
         maxIdle="30"
         maxWait="10000"
         initialSize="10"
         testWhileIdle="true"
         testOnBorrow="true"
         testOnReturn="true"
         validationQuery="SELECT 1"
         validationInterval="30000"
         removeAbandoned="true"
         removeAbandonedTimeout="60"
         logAbandoned="true"
          />
</Context>