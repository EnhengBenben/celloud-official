<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="software" extends="celloud-default">
		<!-- Auth:lin -->
		<action name="getAppInfo" class="com.nova.action.SoftwareAction" method="getAppInfo">
			<result name="success">/pages/software/appDes/main.jsp</result>
		</action>
	
		<!-- 软件管理begin -->
		<action name="goToAddSoftPage" class="com.nova.action.SoftwareAction"
			method="goToAddSoftPage">
			<result name="goToAddSoftPage">/pages/admin/addSoft.jsp</result>
		</action>
		<action name="soft_*" class="com.nova.action.SoftwareAction" method="{1}">
			<result name="getPageListSoftSuc">/pages/admin/softwareList.jsp</result>
			<result name="toEditSoft" type="json">
				<param name="root">soft</param>
			</result>
			<result name="toDetailSoft">/pages/admin/detailSoft.jsp</result>
		</action>
		<!-- 软件管理end -->
	</package>

	<package name="software-ajax" extends="celloud-default">
		<!-- 软件分类管理 begin-->
		<action name="getAllSubClassifyList" class="com.nova.action.ClassifyAction" method="getAllSubClassifyList">
			<result type="json">
				<param name="root">list</param>
			</result>
		</action>
		<!-- 软件分类管理 end-->
		<!-- 软件管理begin -->
		<action name="offLineSoft" class="com.nova.action.SoftwareAction"
			method="offLineSoft">
			<result type="json">
				<param name="root">dataNum</param>
			</result>
		</action>
		<action name="updateBhri" class="com.nova.action.SoftwareAction"
			method="updateBhri">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="getSoftByType" class="com.nova.action.SoftwareAction"
			method="getSoftByType">
			<result type="json">
				<param name="root">list</param>
			</result>
		</action>
		<!-- 软件管理end -->
		<!-- 数据统计begin -->
		<action name="softwareJson_*" class="com.nova.action.SoftwareAction" method="{1}">
			<result name="getAllSoft" type="json">
				<param name="root">list</param>
			</result>
			<result name="softwareRunNum" type="json">
				<param name="root">softRunNum</param>
			</result>
			<result name="getSoftStatistic" type="json">
				<param name="root">softwareRunList</param>
			</result>
			<result name="getAllSoftwareNotInPro" type="json">
				<param name="root">softwareNotInPro</param>
			</result>
			<result name="getAllSoftwareNotInDate" type="json">
				<param name="root">softwareNotInData</param>
			</result>
			<result name="createSoftware" type="json">
				<param name="root">changeNum</param>
			</result>
			<result name="editSoft" type="json">
				<param name="root">changeNum</param>
			</result>
			<result name="deleteSoftWare" type="json">
				<param name="root">changeNum</param>
			</result>
			<result name="getSoftIdByName" type="json">
				<param name="root">softwareId</param>
			</result>
		</action>
		<action name="getAppFormats" class="com.nova.action.SoftwareAction"
			method="getAppFormats">
			<result type="json">
				<param name="root">editType</param>
			</result>
		</action>
		<action name="softwareRecommend" class="com.nova.action.SoftwareAction"
			method="softwareRecommend">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="softwareNoRecommend" class="com.nova.action.SoftwareAction"
			method="softwareNoRecommend">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<!-- 数据统计end -->
		<action name="getDataTypeList" class="com.nova.action.DataFormatAction"
			method="getAllDataType">
			<result type="json">
				<param name="root">typeList</param>
			</result>
		</action>
		<!-- 根据软件编号获取管理员邮箱 -->
		<action name="getEmailBySoftwareId" class="com.nova.action.SoftwareAction"
			method="getEmailBySoftwareId">
			<result type="json">
				<param name="root">email</param>
			</result>
		</action>
		<action name="getSoftwareIdByName" class="com.nova.action.SoftwareAction"
			method="getSoftwareIdByName">
			<result type="json">
				<param name="root">softwareId</param>
			</result>
		</action>
		<action name="getSoftIdByNameOffLine" class="com.nova.action.SoftwareAction"
			method="getSoftIdByNameOffLine">
			<result type="json">
				<param name="root">softwareId</param>
			</result>
		</action>
		<action name="getSoftwareNameById" class="com.nova.action.SoftwareAction"
			method="getSoftwareNameById">
			<result type="json">
				<param name="root">softwareName</param>
			</result>
		</action>
		<action name="getAppRunDataNum" class="com.nova.action.SoftwareAction"
			method="getAppRunDataNum">
			<result type="json">
				<param name="root">dataNum</param>
			</result>
		</action>
		
		<!-- 软件评论begin -->
		<!-- 添加评论 -->
		<action name="addComment" class="com.nova.action.CommentAction"
			method="addComment">
			<result type="json">
				<param name="root">flag</param>
			</result>
		</action>
		<!-- 删除评论 -->
		<action name="delComment" class="com.nova.action.CommentAction"
			method="delComment">
			<result type="json">
				<param name="root">flag</param>
			</result>
		</action>
		<!-- 回复评论 -->
		<action name="replyComment" class="com.nova.action.CommentAction"
			method="replyComment">
			<result type="json">
				<param name="root">flag</param>
			</result>
		</action>
		<!-- 软件评论end -->
	</package>
</struts>