<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="false" />
	<!-- 设置上传文件的大小 -->
	<constant name="struts.multipart.maxSize" value="3221225472"/><!-- 文件最大为3G -->
	<!-- 设置上传文件时候的缓存目录 -->
	<!-- 将上传的临时文保存到D:/temp，而不是项目的WebAppRoot+/temp -->
	<constant name="struts.multipart.saveDir" value="/tmp"></constant>
	<constant name="struts.convention.classes.reload" value="true" />
   	<!-- 请求url不存在时跳转的页面 -->
   	<package name="default" extends="struts-default">
	     <default-action-ref name="notFound" />
	     <action name="notFound">
	     <result>/notFound.jsp</result>
	     </action>
	</package>
   	<package name="celloud-default" extends="struts-default,json-default">
   		<interceptors>
			<interceptor name="sessionStack" class="com.nova.interceptor.LoginInterceptor"></interceptor>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="sessionStack">
					<param name="includeMethods"></param>
					<param name="excludeMethods">getSize,getNumber,initDataKey,uploaded,runQueue,clientLogin,login,toLogin,saveFeedBack,getAllFeedBack,downloadSafeControl,validateUserEmail,resetPassword,updatePwdByUserName,goToForgetPwd,register,getAdminRole,adminLogin,checkUsername,checkUserEmail,checkKapcha,registUser,updateReportByDataKeyProjectId,updateReportByDataKeySoftId,updateReportByProSoftId,addDatasReport,getFileNameByDataKey,getPath,getDataReport,addUser,checkEmailOne,downloadSafeControl</param>
				</interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="loginStack"></default-interceptor-ref>
		
		<global-results>
			<result name="login" type="redirect">/toLogin</result>
		</global-results>
   	</package>

	<!-- 软件管理 -->
	<include file="struts-software.xml"></include>
	<!-- 用户管理 -->
	<include file="struts-user.xml"></include>
	<!-- 数据管理 -->
	<include file="struts-data.xml"></include>
</struts>